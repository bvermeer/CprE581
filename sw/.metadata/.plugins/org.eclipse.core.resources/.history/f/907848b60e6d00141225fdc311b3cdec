/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include <stdlib.h>
#include "platform.h"
#include "xparameters.h"
#include "xil_io.h"
#include "system_defines.h"


//void print(char *str);

int main()
{
    init_platform();

    printf("Resetting the TRNG...\n");

    int i = 0;
    unsigned int output = 0;
    unsigned int testval = 0xAA;

    for(i=1; i<=10000; i++)
    {
    	AXI_TRNG_mReset(XPAR_AXILITE_TRNG_0_BASEADDR);
    }

    printf("Waiting.");

    for(i=1; i<=10000; i++)
    {
    	if(i%1000 == 0)
    	{
    		printf(".");
    	}
    }

    printf("\n");



    printf("Starting the TRNG test...\n\n");


	Xil_Out32(TRNG_REG(30), testval);
	output = Xil_In32(TRNG_REG(30));
	if(output==testval){
	    printf("Able to write to TRNG!\n\n");
	}else{
	    printf("Unable to write to TRNG!\n\n");
	}

    for(i=0;i<10;i++){

    	output = Xil_In32(TRNG_REG(30));
    	printf("%u\n",output);
    }



    return 0;
}
